<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textWorkoutName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimary"
            android:text="Nome do Exercício" />

        <TextView
            android:id="@+id/textWorkoutDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary"
            android:text="3 séries • 12 repetições • 20kg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFinishExercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="✓ Concluir"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TonalButton"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWatchVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Assistir"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.TonalButton"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="start" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShareVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Compartilhar"
                android:textSize="12sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:icon="@android:drawable/ic_menu_share"
                app:iconGravity="start" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
