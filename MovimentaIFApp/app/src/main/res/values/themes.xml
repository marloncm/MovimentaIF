<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Light - MovimentaIF -->
    <style name="Base.Theme.MovimentaIFApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores Primárias -->
        <item name="colorPrimary">@color/maisMovimentoPrimary</item>
        <item name="colorPrimaryVariant">@color/maisMovimentoSecondary</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Cores Secundárias -->
        <item name="colorSecondary">@color/maisMovimentoSecondary</item>
        <item name="colorSecondaryVariant">@color/maisMovimentoPrimary</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Background e Surface -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/maisMovimentoPrimary</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Theme.MovimentaIFApp" parent="Base.Theme.MovimentaIFApp" />

    <style name="Theme.MovimentaIFApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MovimentaIFApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MovimentaIFApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>